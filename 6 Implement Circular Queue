// Write a program in C++ to Implement Circular Queue using dynamic/ Static memory allocation. Perform operations on it.
a) Insertion (Enqueue) b) Deletion (Dequeue) c) Display d) peek
// Using C++


#include <iostream>
#include <stdlib.h>
using namespace std;

struct Node
{
    int data;
    struct Node *next;
};

Node *front = NULL;
Node *rear = NULL;

void enqueue(int val)
{
    Node *newNode = new Node;
    newNode->data = val;
    newNode->next = NULL;

    if (front == NULL && rear == NULL)
    {
        front = newNode;
        rear = newNode;
        rear->next = front; // make it circular
    }
    else
    {
        rear->next = newNode;
        rear = newNode;
        rear->next = front; // maintain circular link
    }

    cout << "\nElement " << val << " inserted successfully.";
}

void dequeue()
{
    if (front == NULL && rear == NULL)
    {
        cout << "\nQueue is empty.";
    }
    else if (front == rear) // Only one element
    {
        cout << "\nDeleted element: " << front->data;
        delete front;
        front = NULL;
        rear = NULL;
    }
    else
    {
        Node *temp = front;
        cout << "\nDeleted element: " << front->data;
        front = front->next;
        rear->next = front; // maintain circular link
        delete temp;
    }
}

void peek()
{
    if (front == NULL && rear == NULL)
    {
        cout << "\nQueue is empty.";
    }
    else
    {
        cout << "\nFront element: " << front->data;
    }
}

void display()
{
    if (front == NULL && rear == NULL)
    {
        cout << "\nQueue is empty.";
    }
    else
    {
        Node *temp = front;
        cout << "\nCircular Queue elements: ";
        do
        {
            cout << temp->data << " ";
            temp = temp->next;
        } while (temp != front);
        cout << endl;
        cout << "Front: " << front->data << " | Rear: " << rear->data << endl;
    }
}

int main(void)
{
    int ch, val;

    cout << "\n 1) Enqueue (Insert)";
    cout << "\n 2) Dequeue (Delete)";
    cout << "\n 3) Display";
    cout << "\n 4) Peek (Front Element)";
    cout << "\n 5) Exit";

    do
    {
        cout << "\n\n Enter your choice: ";
        cin >> ch;

        switch (ch)
        {
        case 1:
            cout << "Enter element to enqueue: ";
            cin >> val;
            enqueue(val);
            break;

        case 2:
            dequeue();
            break;

        case 3:
            display();
            break;

        case 4:
            peek();
            break;

        case 5:
            cout << "\nExiting program...\n";
            break;

        default:
            cout << "\nInvalid choice!";
        }
    } while (ch != 5);

    return 0;
}
